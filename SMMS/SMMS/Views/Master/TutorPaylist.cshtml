@model IEnumerable<SMMS.Models.PayList>

<section class="panel">
    <header class="panel-heading">
        <h2 class="panel-title">List of payments</h2>
    </header>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Payroll.PayDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Payroll.GrossPay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Deduction)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NetPay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentDate)
                </th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Payroll.PayDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payroll.GrossPay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deduction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetPay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentDate)
                </td>

            </tr>
            }

        </table>
    </div>
    <footer class="panel-footer">
        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn-default modal-dismiss">Cancel</button>
            </div>
        </div>
    </footer>
</section>