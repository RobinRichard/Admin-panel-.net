@model IEnumerable<SMMS.Models.Tutor>

@{
    ViewBag.Title = "Tutors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel" style="margin-top:100px;">
    <header class="panel-heading">
        <div class="panel-actions">
            <button class="mb-xs mt-xs mr-xs modal-sizes btn btn-sm btn-primary fade" href="#modalLG" id="btnOpen"></button>
            <button class="btn btn-sm btn-primary btnAdd" data-url='@Url.Action("TutorAction", "Master", new { id = 0 })'>New Tutor</button>
        </div>

        <h2 class="panel-title">List of Tutors</h2>
    </header>
</section>
<div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="datatable-tabletools">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.User.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Email)
                    </td>
                    <td>
                        <button type="button" class="mb-xs mt-xs mr-xs btn btn-xs btn-info btnAdd" data-url='@Url.Action("TutorAction", "Master", new { id = item.TutorID })'><i class="fa fa-pencil"></i> </button>
                        <a class="mb-xs mt-xs mr-xs btn btn-xs btn-info" href="TutorSkill?id=@item.TutorID"><i class="fa fa-music"></i></a>
                        <button type="button" class="mb-xs mt-xs mr-xs btn btn-xs btn-info btnAdd" data-url='@Url.Action("TutorPaylist", "Master", new { id = item.UserID })'><i class="fa fa-dollar"></i> </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


