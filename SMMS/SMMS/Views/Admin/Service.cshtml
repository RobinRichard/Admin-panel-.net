@model IEnumerable<SMMS.Models.InstumentService>

@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="panel" style="margin-top:100px;">
    <header class="panel-heading">
        <div class="panel-actions">
            <button class="mb-xs mt-xs mr-xs modal-sizes btn btn-sm btn-primary fade" href="#modalLG" id="btnOpen"></button>
            <button class="btn btn-sm btn-primary btnAdd" data-url='@Url.Action("ServiceAction", "Admin", new { id = 0 })'>New Service</button>
        </div>
        <h2 class="panel-title">List of Instrument Services</h2>
    </header>
</section>
<div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="datatable-tabletools">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Problem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstrumentHire.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Technician.Description)
                </th>
                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Problem)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstrumentHire.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Technician.Description)
                    </td>
                    <td>
                        <button type="button" class="mb-xs mt-xs mr-xs btn btn-xs btn-info btnAdd" data-url='@Url.Action("ServiceAction", "Admin", new { id = item.InstumentServiceID })'><i class="fa fa-pencil"></i> </button>
                    </td>
                </tr>
            }

            </tbody>
    </table>
</div>
