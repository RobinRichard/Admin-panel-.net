@model IEnumerable<SMMS.Models.Payment>

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel" style="margin-top:100px;">
<header class="panel-heading">
    <div class="panel-actions">
        <button class="mb-xs mt-xs mr-xs modal-sizes btn btn-sm btn-primary fade" href="#modalLG" id="btnOpen"></button>
       @* <button class="btn btn-sm btn-primary btnAdd" data-url='@Url.Action("PaymentAction", "Admin", new { id = 0 })'>New Instrument</button>*@
    </div>
    <h2 class="panel-title">List of Payments</h2>
</header>
</section>
<div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="datatable-tabletools">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PayableAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaidAMount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Enrolment.EnrolmentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentStatu.StatusName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PayableAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidAMount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enrolment.EnrolmentID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentStatu.StatusName)
                    </td>
                    <td>
                        <button type="button" class="mb-xs mt-xs mr-xs btn btn-xs btn-info btnAdd" data-url='@Url.Action("PaymentAction", "Admin", new { id = item.PaymentID })'><i class="fa fa-pencil"></i> </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


