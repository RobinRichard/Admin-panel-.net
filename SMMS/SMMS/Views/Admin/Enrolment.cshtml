@model IEnumerable<SMMS.Models.Enrolment>

@{
    ViewBag.Title = "Enrolment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="panel" style="margin-top:100px;">
    <header class="panel-heading">
        <div class="panel-actions">
            <button class="mb-xs mt-xs mr-xs modal-sizes btn btn-sm btn-primary fade" href="#modalLG" id="btnOpen"></button>
            <button class="btn btn-sm btn-primary btnAdd" data-url='@Url.Action("EnrolmentAction", "Admin", new { id = 0 })'>New Enrolment</button>
        </div>

        <h2 class="panel-title">List of Enrolments</h2>
    </header>
</section>
<div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="datatable-tabletools" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student.User.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lessonbatch.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.User.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lessonbatch.Name)
                    </td>
                    <td>
                        <button type="button" class="mb-xs mt-xs mr-xs btn btn-xs btn-info btnAdd" data-url='@Url.Action("EnrolmentAction", "Admin", new { id = item.EnrolmentID })'><i class="fa fa-pencil"></i> </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>



