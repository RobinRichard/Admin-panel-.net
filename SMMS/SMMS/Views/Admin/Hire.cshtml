@model IEnumerable<SMMS.Models.InstrumentHire>

@{
    ViewBag.Title = "Hire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="panel" style="margin-top:100px;">
    <header class="panel-heading">
        <div class="panel-actions">
            <button class="mb-xs mt-xs mr-xs modal-sizes btn btn-sm btn-primary fade" href="#modalLG" id="btnOpen"></button>
            <button class="btn btn-sm btn-primary btnAdd" data-url='@Url.Action("HireAction", "Admin", new { id = 0 })'>New Hire</button>
        </div>

        <h2 class="panel-title">List of Instrument Hire</h2>
    </header>
</section>
<div class="panel-body">
    <table class="table table-bordered table-striped mb-none" id="datatable-tabletools" >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Enrolment.EnrolmentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstrumentAssert.InstrumentCode)
                </th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Enrolment.Student.User.FirstName)  @Html.DisplayFor(modelItem => item.Enrolment.Student.User.LastName) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InstrumentAssert.InstrumentCode)
                    </td>
                    <td>
                        <button type="button" class="mb-xs mt-xs mr-xs btn btn-xs btn-info btnAdd" data-url='@Url.Action("HireAction", "Admin", new { id = item.InstrumentHireId })'><i class="fa fa-pencil"></i> </button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


