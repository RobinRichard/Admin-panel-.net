@model SMMS.Models.PerformanceList

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">Performance Action</h2>
        </header>
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.HiddenFor(model => model.PerformanceListID)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.PerformanceTime, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PerformanceTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PerformanceTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MusicSheetID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("MusicSheetID", (IEnumerable<SelectListItem>)ViewBag.drpNote, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MusicSheetID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PerformanceID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("PerformanceID", (IEnumerable<SelectListItem>)ViewBag.drpProgram, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PerformanceID, "", new { @class = "text-danger" })
                    </div>
                </div>

               
            </div>
        </div>
        <footer class="panel-footer">
            <div class="row">
                <div class="col-md-12 text-right">
                    <button type="button" data-action="PerformanceAction" class="btn btn-primary btSubmit">Save</button>
                    <button class="btn btn-default modal-dismiss">Cancel</button>
                </div>
            </div>
        </footer>
    </section>
}